<!-- views/page/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Head -->
    <% include ../partial/head %>
</head>

<body>
    <!-- Header -->
    <header>
        <% include ../partial/header %>
    </header>

    <!-- Home -->
    <main class="container ">

        <div class="row justify-content-center greeting">
            <h2 class="col-16 text-center view-pc">
                <!-- PC -->
                Bảng xếp hạng
            </h2>
            <h3 class="col-20 text-center view-tablet">
                <!-- phone -->
                Bảng xếp hạng
            </h3>
        </div>

        <div class="row view-pc">
            <div id="filter" class="col-6">
                <div class="box border rounded">
                    <label>
                        <h5>Bộ lọc tìm kiếm</h5>
                    </label>
                    <form>
                        <div class="form-group">
                            <label for="person" class="">Tên cuber</label>
                            <div class="">
                                <input type="text" class="form-control" id="person" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="event" class="">Bộ môn</label>
                            <select class="form-control" id="event">
                                <option>Rubik's Cube (333)</option>
                                <option>222</option>
                                <option>444</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="">Hiển thị kết quả</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="format" id="best" value="best" checked>
                                <label class="form-check-label" for="best">
                                    Tốt nhất (Best)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="format" id="average"
                                    value="average">
                                <label class="form-check-label" for="average">
                                    Trung bình (Average)
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Tìm</button>
                    </form>
                </div>
            </div>

            <div id="tableResult" class="col-18">
                <div class="result border rounded">
                    <table class="table table-sm table-hover">
                        <thead class="">
                            <tr>
                                <th scope="col">Thứ hạng</th>
                                <th scope="col">Tên</th>
                                <th scope="col">Thời gian nhanh nhất</th>
                                <th scope="col">Thời gian trung bình</th>
                                <th scope="col">Giải đấu</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td><a target="_blank" href="https://www.worldcubeassociation.org/persons/2014TRUN01">Vương Thiện Trung</a></td>
                                <td>6.84</td>
                                <td>10.84</td>
                                <td>Hanoi Open 2025</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </main>

    <!-- Footer -->
    <footer>
        <% include ../partial/footer %>
    </footer>

</body>

</html>